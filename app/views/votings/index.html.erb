<p id="notice"><%= notice %></p>

<h1>Votings</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Poll</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votings.each do |voting| %>
      <tr>
        <td><%= voting.uid %></td>
        <td><%= voting.poll %></td>
        <td><%= voting.status %></td>
        <td><%= voting.user %></td>
        <td><%= link_to 'Show', voting %></td>
        <td><%= link_to 'Edit', edit_voting_path(voting) %></td>
        <td><%= link_to 'Destroy', voting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Voting', new_voting_path %>
