<p id="notice"><%= notice %></p>

<h1>Intervention Types</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Name</th>
      <th>Status</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intervention_types.each do |intervention_type| %>
      <tr>
        <td><%= intervention_type.uid %></td>
        <td><%= intervention_type.name %></td>
        <td><%= intervention_type.status %></td>
        <td><%= intervention_type.description %></td>
        <td><%= intervention_type.user %></td>
        <td><%= link_to 'Show', intervention_type %></td>
        <td><%= link_to 'Edit', edit_intervention_type_path(intervention_type) %></td>
        <td><%= link_to 'Destroy', intervention_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

