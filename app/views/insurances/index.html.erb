<p id="notice"><%= notice %></p>

<h1>Insurances</h1>

<table>
  <thead>
    <tr>
      <th>Insurer</th>
      <th>Vehicule</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Insurance number</th>
      <th>Pre tax amount</th>
      <th>Vat rate</th>
      <th>Amount including tax</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <tr>
        <td><%= insurance.insurer %></td>
        <td><%= insurance.vehicule %></td>
        <td><%= insurance.start_date %></td>
        <td><%= insurance.end_date %></td>
        <td><%= insurance.insurance_number %></td>
        <td><%= insurance.pre_tax_amount %></td>
        <td><%= insurance.vat_rate %></td>
        <td><%= insurance.amount_including_tax %></td>
        <td><%= insurance.status %></td>
        <td><%= insurance.user %></td>
        <td><%= link_to 'Show', insurance %></td>
        <td><%= link_to 'Edit', edit_insurance_path(insurance) %></td>
        <td><%= link_to 'Destroy', insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

